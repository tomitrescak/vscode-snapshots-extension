{
  "name": "snapshot-preview",
  "displayName": "Preview Snapshots",
  "description":
    "Snapshot preview for Luis framework",
  "version": "0.0.1",
  "publisher": "eg2",
  "galleryBanner": {
    "color": "#5c2d91",
    "theme": "dark"
  },
  "bugs": {
    "url": "https://github.com/Microsoft/vscode-extension-samples/issues",
    "email": "egamma@microsoft.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Microsoft/vscode-extension-samples.git"
  },
  "homepage": "https://github.com/Microsoft/vscode-extension-samples/tree/master/textdocumentprovider-sample/README.md",
  "categories": ["Other"],
  "engines": {
    "vscode": "^0.10.7"
  },
  "activationEvents": ["onCommand:extension.showSnapshots"],
  "main": "./out/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.showSnapshots",
        "title": "Snapshots Preview"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "extension.showSnapshots",
          "when": "resourceLangId == css"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Snapshot configuration",
      "properties": {
        "snapshots.saveHtml": {
          "type": "boolean",
          "default": false,
          "description": "Decides whether html will be saved to disk"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "tslint": "tslint -c tslint.json src/extension.ts"
  },
  "devDependencies": {
    "typescript": "^2.1.4",
    "vscode": "^1.0.0",
    "@types/node": "*"
  }
}
